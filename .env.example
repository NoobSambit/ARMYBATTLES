# ARMYBATTLES Environment Variables

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/armybattles
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/armybattles

# Last.fm API Credentials
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_SHARED_SECRET=your_lastfm_api_secret_here

# Spotify API Credentials (if using Spotify features)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_here_use_strong_random_string

# Cron Job Security (for Netlify serverless optimization)
CRON_SECRET=your_cron_secret_here_use_openssl_rand_hex_32
# Generate with: openssl rand -hex 32
# IMPORTANT: Use the same secret in both GitHub Actions and Netlify

# Application Settings
NODE_ENV=development
# Options: development, production

# Next.js Settings
NEXT_PUBLIC_API_URL=http://localhost:5000
# For production: https://your-app.netlify.app